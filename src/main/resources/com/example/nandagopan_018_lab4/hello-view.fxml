<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.RadioButton?>
<GridPane alignment="CENTER" xmlns:fx="http://javafx.com/fxml"
          fx:controller="com.example.nandagopan_018_lab4.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label text="No Frills"  GridPane.rowIndex="1" GridPane.columnIndex="3"/>
    <Label text=""  GridPane.rowIndex="2" GridPane.columnIndex="1"/>
    <Label text=""  GridPane.rowIndex="3" GridPane.columnIndex="1"/>

    <Label text="Item : "  GridPane.rowIndex="4" GridPane.columnIndex="2"/>
    <ComboBox fx:id="cmbItems" onAction="#onItemsSelected" GridPane.rowIndex="4" GridPane.columnIndex="3"/>

    <Label text="Quantity : "  GridPane.rowIndex="4" GridPane.columnIndex="6"/>
    <ComboBox fx:id="cmbQuantity" onAction="#onItemQuantitySelected" GridPane.rowIndex="4" GridPane.columnIndex="7"/>

    <Button text="Add Items" onAction="#addToCart" GridPane.rowIndex="5" GridPane.columnIndex="3"/>
    <Label text="cart : " GridPane.rowIndex="6" GridPane.columnIndex="3"/>
    <Label fx:id="cart" GridPane.rowIndex="7" GridPane.columnIndex="3"/>

    <Label text=""  GridPane.rowIndex="8" GridPane.columnIndex="1"/>

    <Label text="Name : " GridPane.rowIndex="9" GridPane.columnIndex="2"/>
    <TextField fx:id="customerName" GridPane.rowIndex="9" GridPane.columnIndex="3" prefColumnCount="10"/>

    <Label text="Phone No : " GridPane.rowIndex="10" GridPane.columnIndex="2"/>
    <TextField fx:id="customerPhone" GridPane.rowIndex="10" GridPane.columnIndex="3" prefColumnCount="10"/>

    <Label text="Address : " GridPane.rowIndex="11" GridPane.columnIndex="2"/>
    <TextField fx:id="customerAddress" GridPane.rowIndex="11" GridPane.columnIndex="3" prefColumnCount="10"/>

    <RadioButton fx:id="rdoPickup" text="Pick-up" onAction="#onDeliverySelection" GridPane.rowIndex="12" GridPane.columnIndex="3"/>
    <RadioButton fx:id="rdoDelivery" text="Delivery" onAction="#onDeliverySelection" GridPane.rowIndex="12" GridPane.columnIndex="4"/>

    <Button text="Place Order" onAction="#onPlaceOrderClick"  GridPane.rowIndex="13" GridPane.columnIndex="4"/>
    <Label fx:id="orderInfo"  GridPane.rowIndex="14" GridPane.columnIndex="3"/>

<!--    <gridLinesVisible>true</gridLinesVisible>-->
</GridPane>
